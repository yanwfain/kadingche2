.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 74px;
  background:black;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: visible;
  z-index: 999;
}
.color{
   color: rgb(225, 255, 55);
}
.border{
  width: 100%;
  height: 2rpx;
  background: rgb(225, 255, 55);
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 10rpx 0;
}

.tab-bar-item image {
  /* margin-top:10rpx; */
  width: 60px;
  height: 60px;
  /* line-height: 80px; */
}
.tab-bar-item view {
  font-size: 10px;
  width: 100%;
  text-align: center;
